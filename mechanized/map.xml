<map proto="1.4.2">
<name>Mechanized</name>
<version>1.0.5</version>
<objective>Capture the opponent's flag as many times as possible in 12 minutes!</objective>
<time result="score" overtime="2m" max-overtime="6m">12m</time>
<authors>
    <author uuid="bd133f12-724a-4ca9-af7b-f808810aa835"/> <!-- ref -->
    <author uuid="2d372806-0e62-4e44-87f7-2394540f5203"/> <!-- Tkes -->
    <author uuid="97d1cc45-0f69-482b-9974-09351aef9dfa"/> <!-- lunaceee -->
    <author uuid="6c5d7783-27fd-4ac5-8a1d-ba35206edf53"/> <!-- _Nathy -->
    <author uuid="ec5ec930-5cf3-4f8a-ad9f-09056aeed71b"/> <!-- Tundren -->
</authors>
<broadcasts>
    <alert after="1s" every="4m">Capture the flag at your spawn!</alert>
</broadcasts>
<teams>
    <team id="blue" color="blue" max="5">Blue</team>
    <team id="red" color="dark red" max="5">Red</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" unbreakable="true" material="stone sword"/>
        <item slot="1" unbreakable="true" material="bow"/>
        <item slot="2" material="golden apple"/>
        <item slot="8" amount="12" material="arrow"/>
        <helmet unbreakable="true" team-color="true" material="leather helmet"/>
        <chestplate unbreakable="true" team-color="true" material="leather chestplate"/>
        <leggings unbreakable="true" material="chainmail leggings">
            <enchantment level="3">projectile_protection</enchantment>
        </leggings>
        <boots unbreakable="true" material="iron boots">
            <enchantment>feather_falling</enchantment>
        </boots>
        <effect duration="6" amplifier="255">resistance</effect>
        <game-mode>adventure</game-mode>
    </kit>
    <kit id="flag-kit" force="true">
        <effect>slowness</effect>
    </kit>
    <kit id="reset-kit" force="true">
        <effect duration="0" amplifier="0">slowness</effect>
    </kit>
</kits>
<spawns>
    <default>
        <region yaw="90">
            <cylinder base="53.5,48,0.5" radius="1" height="0"/>
        </region>
    </default>
    <spawn team="blue" kit="spawn-kit">
        <region yaw="90">
            <point>5.5,8,31.5</point>
        </region>
    </spawn>
    <spawn team="red" kit="spawn-kit">
        <region yaw="-90">
            <point>-4.5,8,-30.5</point>
        </region>
    </spawn>
</spawns>
<filters>
  <team id="only-blue">blue</team>
  <team id="only-red">red</team>
  <time id="flag-respawns">0</time>
</filters>
<regions>
    <union id="flag-nets">
        <cuboid id="blue-net" min="7,8,30" max="4,10,33"/>
        <cuboid id="red-net" min="6,8,-29" max="-3,10,-32"/>
    </union>
    <apply block="never" use="never"/>
</regions>
<flags flag-proximity-metric="none" net-proximity-metric="none" required="false">
    <flag id="blue-flag"
          name="Blue Flag"
          owner="blue"
          color="blue"
          pickup-kit="flag-kit"
          drop-kit="reset-kit">
        <post pickup-filter="only-red" recover-time="12s" respawn-time="10s">25.5,14,48.5</post>
    </flag>
    <flag id="red-flag"
          name="Red Flag"
          owner="red"
          color="red"
          pickup-kit="flag-kit"
          drop-kit="reset-kit">
        <post pickup-filter="only-blue" recover-time="12s" respawn-time="10s">-24.5,14,-47.5</post>
    </flag>
    <flags points="1">
        <net region="blue-net" flag="red-flag" respawn-filter="flag-respawns"/>
        <net region="red-net" flag="blue-flag" respawn-filter="flag-respawns"/>
    </flags>
</flags>
<score/>
<spawners>
    <spawner id="gapple-spawner" delay="6s">
        <spawn-region>
            <point>0,5,0</point>
        </spawn-region>
        <player-region>
            <cylinder base="0.5,5,0.5" radius="1" height="3"/>
        </player-region>
        <item material="golden apple"/>
    </spawner>
</spawners>
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>iron boots</item>
    <item>banner</item>
</itemremove>
<itemkeep>
    <item>golden apple</item>
    <item>arrow</item>
</itemkeep>
<kill-reward>
    <item material="golden apple"/>
    <item amount="6" material="arrow"/>
</kill-reward>
<respawn delay="7s" auto="true"/>
<hunger>
    <depletion>off</depletion>
</hunger>
</map>
