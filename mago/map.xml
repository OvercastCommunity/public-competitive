<map proto="1.4.2">
<name>Mago</name>
<version>1.0.4</version>
<objective>First team to 750 points win!</objective>
<authors>
    <author uuid="2d372806-0e62-4e44-87f7-2394540f5203"/> <!-- Tkes -->
    <author uuid="97d1cc45-0f69-482b-9974-09351aef9dfa"/> <!-- lunaceee -->
</authors>
<contributors>
    <contributor uuid="621b2aa8-4e5f-4ed8-bd36-0ae2f8952a06"/> <!-- Strangey -->
</contributors>
<teams>
    <team id="blue" color="blue" max="5">Blue</team>
    <team id="red" color="dark red" max="5">Red</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" unbreakable="true" material="stone sword"/>
        <item slot="1" unbreakable="true" material="bow"/>
        <item slot="2" material="golden apple"/>
        <item slot="8" amount="10" material="arrow"/>
        <helmet unbreakable="true" team-color="true" material="leather helmet"/>
        <chestplate unbreakable="true" team-color="true" material="leather chestplate"/>
        <leggings unbreakable="true" material="chainmail leggings">
            <enchantment level="3">projectile_protection</enchantment>
        </leggings>
        <boots unbreakable="true" material="iron boots">
            <enchantment>feather_falling</enchantment>
        </boots>
        <effect duration="6" amplifier="255">resistance</effect>
        <game-mode>adventure</game-mode>
    </kit>
</kits>
<spawns>
    <default>
        <region yaw="-90">
            <cylinder base="0.5,67,0.5" radius="1" height="0"/>
        </region>
    </default>
    <spawn team="blue" kit="spawn-kit">
        <region yaw="180">
            <point>-3.5,40,43.5</point>
        </region>
    </spawn>
    <spawn team="red" kit="spawn-kit">
        <region yaw="0">
            <point>4.5,40,-42.5</point>
        </region>
    </spawn>
</spawns>
<regions>
    <cuboid id="east" min="33,10,-3" max="26,16,4"/>
    <cuboid id="west" min="-32,10,4" max="-25,16,-3"/>
    <cuboid id="mid" min="-3,17,4" max="4,20,-3"/>
    <apply use="never" block="never"/>
</regions>
<king>
    <hills required="false" capture-time="5s" points="1" time-multiplier="0" show-progress="true" neutral-state="true" incremental="true" permanent="false">
        <hill name="West Hill" id="west-point" capture="west" progress="west"/>
        <hill name="Mid Hill" id="mid-point" capture="mid" progress="mid"/>
        <hill name="East Hill" id="east-point" capture="east" progress="east"/>
    </hills>
</king>
<score>
    <limit>750</limit>
</score>
<spawners>
    <spawner id="gapple-spawner" delay="6s">
        <spawn-region>
            <point>0,8,0</point>
        </spawn-region>
        <player-region>
            <cylinder base="0.5,8,0.5" radius="1" height="3"/>
        </player-region>
        <item material="golden apple"/>
    </spawner>
</spawners>
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>iron boots</item>
</itemremove>
<itemkeep>
    <item>golden apple</item>
    <item>arrow</item>
</itemkeep>
<kill-reward>
    <item material="golden apple"/>
    <item amount="5" material="arrow"/>
</kill-reward>
<respawn delay="3s" auto="true"/>
<hunger>
    <depletion>off</depletion>
</hunger>
</map>
